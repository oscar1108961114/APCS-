mport java.io.BufferedReader;
import java.io.InputStreamReader;
public class o015
{
	public static void main(String[] args)
	{
		try(InputStreamReader cin = new InputStreamReader(System.in);
		    BufferedReader br = new BufferedReader(cin))
		{
			int n = Integer.parseInt(br.readLine());
			String str[] = br.readLine().split(" ");
			int p1 = Integer.parseInt(str[0]);
            int p2 = Integer.parseInt(str[1]);
            int max  = Integer.MIN_VALUE;
            int min  = Integer.MAX_VALUE;
            for(int i=1;i<n;i++)
            {
               String str1[] = br.readLine().split(" ");
               int x = Integer.parseInt(str1[0]);
               int y = Integer.parseInt(str1[1]);
               int d = Math.abs(p1 - x) + Math.abs(p2 - y);
               if(d > max)
               {
            	   max = d;
               }
               if(d < min)
               {
            	   min = d;
               }
               p1 = x;
               p2 = y;
            }
            System.out.println(max + " " + min);
		}
        catch (Exception e)
		{
			e.printStackTrace();
		}
	}
}
