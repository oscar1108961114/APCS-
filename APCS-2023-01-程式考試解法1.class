import java.util.Scanner;
public class o16
{
	public static void main(String[] args)
	{
	   Scanner cin = new Scanner(System.in);
	   int k = cin.nextInt();
	   int simax = Integer.MIN_VALUE;
	   int timax = Integer.MIN_VALUE;
	   int result = 0;
	   int count = 0;
	   for(int i=0;i<k;i++)
	   {
		   int ti = cin.nextInt();//上傳時間
		   int si = cin.nextInt();//分數
		   if(si > simax)
		   {
			  simax = si;
			  timax = ti;
		   }
		   if(si == -1)
		   {
			  count++;
		   }
	   }
       result = simax - k - count * 2;
       if(result < 0)    
       {
    	  result = 0; 
       }
       System.out.println(result + " " + timax);	
	}
}
